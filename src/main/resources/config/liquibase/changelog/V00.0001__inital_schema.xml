<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">    <changeSet author="luke_corf" id="202103032117-01">
        <createSequence cacheSize="20" cycle="false" incrementBy="1" sequenceName="SEQ_PUBLISHER" startValue="1"/>
    </changeSet>

    <changeSet author="luke_corf" id="202103032117-02">
        <createTable remarks="Publishing company information." tableName="TB_PUBLISHING">
            <column name="ID" remarks="Identifier." type="NUMBER(10, 0)">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" remarks="Publisher name." type="VARCHAR2(255 BYTE)">
                <constraints nullable="false"/>
            </column>
            <column name="WEBSITE" remarks="Publisher website." type="VARCHAR2(255 BYTE)">
                <constraints nullable="false"/>
            </column>
            <column name="BIRTH_DATE" remarks="Publisher birth date." type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="LOGO" remarks="Publisher logo" type="BLOB">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" remarks="Publisher description." type="VARCHAR2(4000 BYTE)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
